<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    >

    <EditText
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_ipaddress"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="IP"
        android:id="@+id/tv_ip"
        android:layout_alignBottom="@+id/et_ipaddress"
        android:layout_alignTop="@+id/et_ipaddress"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:layout_toStartOf="@+id/et_ipaddress" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forward"
        android:id="@+id/bt_forward"
        android:layout_alignStart="@+id/bt_reverse"
        android:layout_above="@+id/bt_left" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/bt_left"
        android:layout_above="@+id/bt_reverse"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:id="@+id/bt_right"
        android:layout_alignTop="@+id/bt_left"
        android:layout_alignEnd="@+id/et_ipaddress" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reverse"
        android:id="@+id/bt_reverse"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp" />



    <EditText
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_port"
        android:layout_below="@+id/et_ipaddress"
        android:layout_alignStart="@+id/et_ipaddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Port"
        android:id="@+id/tv_port"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/et_port"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_ip" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/bt_stop"
        android:layout_above="@+id/bt_reverse"
        android:layout_centerHorizontal="true" />
</RelativeLayout>